<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".NormalFeedbackFragment"
    app:navGraph="@navigation/main_nav">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="top"
        android:background="@color/white">
        <ImageButton
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_volume"
            android:background="@color/white"
            android:layout_marginStart="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HEAR INFO"
            android:textStyle="bold"
            android:textSize="35sp"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/ic_arrow_left"
            android:drawableTint="@color/grey"/>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:padding="20dp"
            android:background="@color/mediumseagreen">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NORMAL"
                android:textSize="40sp"
                android:layout_gravity="center"
                android:textColor="@color/white" />

            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/ic_check_circle"
                android:layout_gravity="center"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:cardCornerRadius="30dp"
        android:id="@+id/highinstructions"
        android:layout_below="@id/highwarning">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recheck within 1 day"
            android:textSize="28dp"
            android:padding="5dp"
            android:background="@color/grey"
            android:textAlignment="center"
            android:textStyle="bold"
            android:drawableLeft="@drawable/ic_redo"
            android:drawableTint="@color/black"
            android:drawablePadding="5dp"/>

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/backaddButtonNormal"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_height="60dp"
        android:backgroundTint="@color/lavender"
        android:text="@string/back"
        android:textSize="25sp"
        app:cornerRadius="20dp"
        app:drawableTint="@color/white"/>

</LinearLayout>