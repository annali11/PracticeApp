<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/login_background2"
    tools:context=".SignInActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="25dp"
            android:background="@drawable/custom_edittext">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Sign In"
                android:textColor="@color/grey"
                android:textSize="36sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:padding="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Please verify your phone number with a one time password."
                android:textSize="18sp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:textColor="@color/lavender"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/signin_phone"
                android:inputType="number"
                android:maxLines="1"
                android:background="@drawable/custom_edittext"
                android:layout_marginTop="20dp"
                android:padding="8dp"
                android:hint="Phone Number"
                android:drawableStart="@drawable/ic_person"
                android:drawablePadding="8dp"
                android:textColor="@color/darkgrey"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/signin_password"
                android:background="@drawable/custom_edittext"
                android:layout_marginTop="30dp"
                android:padding="8dp"
                android:hint="One-Time Password"
                android:inputType="number"
                android:drawableStart="@drawable/ic_lock"
                android:drawablePadding="8dp"
                android:textColor="@color/darkgrey"
                android:maxLines="1"
                android:maxLength="5"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/verifyphone_button"
                android:text="Receive One-Time Password"
                android:textSize="17sp"
                android:layout_marginTop="25dp"
                android:backgroundTint="@color/lavender"
                android:textColor="@color/white"
                app:cornerRadius="20sp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:id="@+id/signin_button"
                android:text="Sign In"
                android:layout_gravity="center"
                android:padding="15dp"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/lavender"
                android:textColor="@color/white"
                app:cornerRadius="20sp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>